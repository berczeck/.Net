<?xml version="1.0"?>
<configuration>

  <system.web>
    <compilation debug="true" targetFramework="4.0" />
  </system.web>
  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <serviceMetadata httpGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="false"/>
          <errorServicio habilitado="true" />
        </behavior>
      </serviceBehaviors>

      <endpointBehaviors>
        <behavior>
          <trazaServicio habilitado="true" />
        </behavior>
      </endpointBehaviors>
      
    </behaviors>

    <extensions>
      <behaviorExtensions>
        <add name="errorServicio" type="Framework.Wcf.Error.BehaviorSection, Framework.Wcf" />
        <add name="trazaServicio" type="Framework.Wcf.Traza.BehaviorSection, Framework.Wcf" />
      </behaviorExtensions>
    </extensions>
    
    <serviceHostingEnvironment multipleSiteBindingsEnabled="true" />
  </system.serviceModel>
 <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
    <directoryBrowse enabled="true"/>
  </system.webServer>

</configuration>
